<% include ../partials/header %>

<div class="container">
<div class="carousel carousel-slider  z-depth-5">
        <!-- Create cards -->
        <% polls.forEach(function (poll){%>
            <div class="carousel-item white-text" >
                <div class="row">
                    <form onsubmit="vote(event)" id="<%=poll._id%>">
                        <div class="col s12 m12">
                            <div class="card blue darken-1">
                                <div class="card-content white-text">
                                    <h2><%=poll.topic%></h2>
                                </div>
                            </div>
                            
                            <% poll.choices.forEach(function (choice){%>
                                <p>
                                    <label>
                                    <input class="with-gap" name="optionsRadios" type="radio" value="<%=choice.value%>" data-id="<%=choice._id%>"/>
                                    <span><%=choice.value%></span>
                                    <span id="vote-count-<%=poll._id%>-<%=choice.value%>" class="right badge"><%=choice.votes%></span>
                                    </label>
                                </p>                                    
                                <%})%>
                            <button id="vote-btn-<%=poll._id%>" class="right btn waves-effect waves-light" type="submit" value="<%=poll._id%>">Vote
                                <i class="material-icons right">send</i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        <%})%>   
    </div>
</div>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="https://js.pusher.com/4.1/pusher.min.js"></script>
<script src="/javascripts/AJAX.js"></script>
<script src="/javascripts/pusherPropagate.js"></script>
<script src="/javascripts/blockPolls.js"></script>
<% include ../partials/footer %>